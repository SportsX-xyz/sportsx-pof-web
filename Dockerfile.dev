# Development Dockerfile for SportsX React Frontend
FROM node:20-alpine

# Set working directory
WORKDIR /app

# Install dependencies for native modules and Python for node-gyp
RUN apk add --no-cache \
    libc6-compat \
    python3 \
    make \
    g++ \
    && ln -sf python3 /usr/bin/python

# Copy package files first
COPY package.json ./

# Install dependencies using npm ci for reproducible builds
RUN npm install

# Copy source code and public assets
COPY . .

# Ensure public directory permissions and verify assets
RUN chmod -R 755 /app/public && \
    ls -la /app/public/ && \
    ls -la /app/public/images/ && \
    echo "Public directory contents verified"

# Expose development port
EXPOSE 8080

# Environment variables will be loaded from .env file via docker-compose

# Start development server
CMD ["npm", "run", "dev"]